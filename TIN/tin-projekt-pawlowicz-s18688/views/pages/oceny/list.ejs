<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Lista ocen</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Nazwa przedmiotu</th>
                <th>Imie i nazwisko studenta</th>
                <th>Imię i nazwisko prowadzącego</th>
                <th>Data wystawienia</th>
                <th>Ocena</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% for (let ocena of oceny) { %>
            <tr>
                <td><%= ocena.przedmiot.name %></td>
                <td><%= ocena.student.firstName+" "+ocena.student.lastName %></td>
                <td><%= ocena.teacher %></td>
                <td><%= ocena.date.toISOString().split('T')[0] %></td>
                <td><%= ocena.mark %></td>
                <td>
                    <ul class="table-list-actions">
                        <li><a href="/oceny/details/<%=ocena._id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li><a href="/oceny/edit/<%=ocena._id%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="/oceny/delete/<%=ocena._id%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
            <% } %>

        </tbody>
    </table>
    <p><a href="/oceny/add" class="button-add">Dodaj nową ocenę</a></p>
</main>
<%- include('../../fragments/footer.ejs') %>