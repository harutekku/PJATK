<%- include('../../fragments/header.ejs') %>
<main>
    <h2><%= __('przed.list.pageTitle') %></h2>
    <table class="table-list">
        <thead>
            <tr>
                <th><%= __('przed.fields.name') %></th>
                <th><%= __('przed.fields.shortcut') %></th>
                <th><%= __('przed.fields.department') %></th>
                <th><%= __('list.actions.title') %></th>
            </tr>
        </thead>
        <tbody>
            <% for (let przed of przeds) { %>
            <tr>
                <td><%= przed.name %></td>
                <td><%= przed.shortcut %></td>
                <td><%= przed.department %></td>
                <td>
                    <ul class="table-list-actions">
                        <li><a href="/przedmioty/details/<%=przed._id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a></li>
                        <li><a href="/przedmioty/edit/<%=przed._id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a></li>
                        <li><a href="/przedmioty/delete/<%=przed._id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a></li>
                    </ul>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/przedmioty/add" class="button-add"><%= __('przed.list.addNew') %></a></p>
</main>
<%- include('../../fragments/footer.ejs') %>